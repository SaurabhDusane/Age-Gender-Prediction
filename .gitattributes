# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# JavaScript/TypeScript files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf

# JSON files
*.json text eol=lf

# YAML files
*.yaml text eol=lf
*.yml text eol=lf

# Markdown files
*.md text eol=lf

# Configuration files
*.ini text eol=lf
*.cfg text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files
*.pkl binary
*.pt binary
*.pth binary
*.onnx binary
*.h5 binary
*.pb binary
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.ico binary
*.mp4 binary
*.avi binary
