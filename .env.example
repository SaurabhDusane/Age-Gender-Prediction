# Application
APP_NAME="Demographic Analysis System"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
LOG_LEVEL="INFO"

# API Configuration
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Security
SECRET_KEY="change-me-in-production"
JWT_SECRET="change-me-in-production"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database - PostgreSQL
POSTGRES_HOST="localhost"
POSTGRES_PORT=5432
POSTGRES_DB="demographics"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}"

# Database - Redis
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""
REDIS_URL="redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}"

# Model Configuration
DEVICE="cuda"
BATCH_SIZE=8
NUM_WORKERS=4
ENABLE_TENSORRT=false
ENABLE_ONNX=true

# Face Detection
FACE_DETECTOR="yolov8"
FACE_CONFIDENCE_THRESHOLD=0.5
MIN_FACE_SIZE=30
MAX_FACES_PER_FRAME=20

# Age Estimation
AGE_ENSEMBLE_MODELS="dex,ssrnet,vit"
AGE_TEMPORAL_SMOOTHING=true
AGE_SMOOTHING_WINDOW=5

# Gender Classification
GENDER_MODEL="fairface"
GENDER_CONFIDENCE_THRESHOLD=0.7

# Emotion Recognition
EMOTION_MODEL="affectnet"
EMOTION_CLASSES=7

# Face Re-Identification
FACE_EMBEDDING_MODEL="arcface"
FACE_EMBEDDING_DIM=512
REID_SIMILARITY_THRESHOLD=0.6

# Tracking
ENABLE_TRACKING=true
MAX_TRACKING_AGE=30
MIN_HITS=3
IOU_THRESHOLD=0.3

# Quality Assessment
MIN_QUALITY_SCORE=0.5
MAX_BLUR_THRESHOLD=100
MAX_POSE_ANGLE=45

# Performance
ENABLE_GPU=true
ENABLE_MIXED_PRECISION=true
CACHE_EMBEDDINGS=true
CACHE_TTL=3600

# Vector Search
FAISS_INDEX_TYPE="IVFFlat"
FAISS_NLIST=100
FAISS_NPROBE=10

# Ethical AI
REQUIRE_CONSENT=true
ENABLE_AUDIT_LOGS=true
DATA_RETENTION_DAYS=90
ANONYMIZE_DATA=true
SHOW_CONFIDENCE_SCORES=true

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090
SENTRY_DSN=""
ENABLE_PROFILING=false

# Frontend
FRONTEND_URL="http://localhost:3000"
CORS_ORIGINS="http://localhost:3000,http://localhost:8000"

# File Storage
UPLOAD_DIR="./data/uploads"
MODEL_DIR="./models"
CACHE_DIR="./cache"
LOG_DIR="./logs"

# Video Streaming
STREAM_FPS=30
STREAM_QUALITY=85
MAX_STREAM_DURATION=3600

# Model URLs (for auto-download)
YOLOV8_FACE_URL="https://github.com/akanametov/yolo-face/releases/download/v0.0.0/yolov8n-face.pt"
DEX_MODEL_URL=""
SSRNET_MODEL_URL=""
ARCFACE_MODEL_URL=""
FAIRFACE_MODEL_URL=""

# Dataset Paths (for training/evaluation)
UTKFACE_PATH=""
AFAD_PATH=""
IMDB_WIKI_PATH=""
FAIRFACE_PATH=""
AFFECTNET_PATH=""

# Celery (Background Tasks)
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
